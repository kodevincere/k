<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:baseRecycler="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.kodevincere.example.ui.main.MainActivity">

    <co.kodevincere.k.base.ui.recyclerview.BaseRecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        baseRecycler:swipeToRefresh="true"
        baseRecycler:swipeToRefreshColor1="@color/colorPrimary"
        baseRecycler:swipeToRefreshColor2="@color/colorPrimaryDark"
        baseRecycler:swipeToRefreshColor3="@color/colorAccent"
        baseRecycler:itemsThreshold="1"/>

</android.support.constraint.ConstraintLayout>
